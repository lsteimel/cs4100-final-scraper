{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules" , "dist", "*.test.ts"]
}
